

ALGORITHM sort_insertion
VAR
 Tab : ARRAY_OF INTEGER[n];
 n: INTEGER;
BEGIN
REPEAT
 Write ("Give a valid size positive and less than 100");
 Read (n);|
UNTIL
(n >0 and n<100);
FOR i FROM 0 TO n-1 DO
 Read (tab[il);
I
END_FOR FOR
 i FROM 1 TO n STEP 1
DO
 elt = tab[il;
 j:= 1-1;
WHILE 
(j > = 0 AND tab[j] > elt) DO
 elt = tab[i];
 tab[j+1] := tab[j];
 j: j-1;
END WHILE
 tab[j+1]:= elt;
END
_FOR
FOR
 i FROM 0 TO n-1 STEP 1
DO
 Write ("The new array: ", tab[il);
END_FOR
END


